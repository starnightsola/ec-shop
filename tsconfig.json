{
 "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx", // ← ここが必要！
    "esModuleInterop": true, // ← Jestが推奨する設定
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "types": ["node", "jest"]
  },
  "include": ["src", "jest.setup.ts"]
}
